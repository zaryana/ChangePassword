<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="MyDocumentsGadget" height="160" >
    <Require feature="opensocial-0.8" />
    <Require feature="dynamic-height"/>
  </ModulePrefs>
  <Content type="html" view="default, home, profile">
    <![CDATA[  
    
    <head>
      
      <link type="text/css" rel="stylesheet" href="style/mydocuments.css" />
      <link type="text/css" rel="stylesheet" href="/exo-gadget-resources/skin/exo-gadget/gadget-common.css" />
      <link type="text/css" rel="stylesheet" href="/eXoDMSResources/skin/DefaultSkin/Stylesheet-lt.css" />

      
      <script language="javascript" type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
      <script type="text/javascript">
        

        
        function initDocuments(){
                     
          $.getJSON("/rest/gadgets/mydocuments/path", function(result){
                         
              $("#documentList > li > a").each(function(index) {
                $(this).attr('href', '/portal/intranet/documents?path=Personal Documents'+ result.private + $(this).attr('href'));                   
              });
            
              $("#publicFolder > a").attr('href', '/portal/intranet/documents?path=Personal Documents'+ result.public);                    
            
          }); 
          
        }
               
        gadgets.util.registerOnLoadHandler(function(){         
          initDocuments();
        });       
        
      </script>  
    </head>
    
    <body > 
      <div id="MyDocumentsGadget">
      <div class="UIGadgetThemes" id="myDocumentsContainer">
        <span class="title">My Documents</span>
        <ul id="documentList">
          <li class="Icon exo_documentFolder16x16Icon"><a target="_parent" href="/Documents">Documents</a></li>
          <li class="Icon exo_favoriteFolder16x16Icon"><a target="_parent" href="/Favorites">Favorites</a></li>
          <li class="Icon exo_pictureFolder16x16Icon"><a target="_parent" href="/Pictures">Pictures</a></li>
          <li class="Icon nt_unstructured16x16Icon" id="publicFolder"><a target="_parent" href="">Public Documents</a></li>
          <li class="Icon exo_videoFolder16x16Icon"><a target="_parent" href="/Videos">Videos</a></li>
        </ul>
        </div>
      </div>
    </body> 
    ]]></Content>
</Module>
