<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>tomcat</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>com.exoplatform.cloudworkspaces:cloud-workspaces-admin-installer</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory>/</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>com.exoplatform.cloudworkspaces:cloud-workspaces-admin-bundle</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory>/</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>com.exoplatform.cloudworkspaces:cloud-workspaces-platform-bundle</include>
      </includes>
      <unpack>false</unpack>
      <outputDirectory>local-cloud</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <fileMode>0644</fileMode>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <!-- Default files -->
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>local-cloud</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/starter</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
