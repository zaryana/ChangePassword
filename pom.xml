<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform</groupId>
    <artifactId>exo.parent</artifactId>
    <version>7.1</version>
  </parent>
  <groupId>com.cloud-intranet</groupId>
  <artifactId>cloud-intranet-parent</artifactId>
  <version>1.0.0-Beta1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>eXo Cloud Intranet</name>
  <description>Parent POM for Cloud Intranet projects.</description>

  <scm>
    <connection>scm:svn:http://svn.exoplatform.org/exo-int/cloud-intranet/trunk/</connection>
    <url>http://svn.exoplatform.org/exo-int/cloud-intranet/trunk/</url>
    <developerConnection>scm:svn:http://svn.exoplatform.org/exo-int/cloud-intranet/trunk/</developerConnection>
  </scm>

  <properties>
    <!-- Defaut compiler settings -->
    <maven.compiler.optimize>true</maven.compiler.optimize>
    <maven.compiler.source>1.6</maven.compiler.source>
    <maven.compiler.target>1.6</maven.compiler.target>
  
    <!-- eXo Modules -->
    <org.exoplatform.platform.version>3.5.0-CR1-SNAPSHOT</org.exoplatform.platform.version>
    <org.exoplatform.cloud-management.version>1.1-M2</org.exoplatform.cloud-management.version>      
    <!-- Db libs -->
    <mysql.connector.java.version>5.1.13</mysql.connector.java.version>
    <tomcat.version>6.0.32</tomcat.version>
  </properties>

  <prerequisites>
    <maven>2.2.1</maven>
  </prerequisites>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.exoplatform.platform.cloud</groupId>
        <artifactId>exo.platform.packaging.tomcat</artifactId>
        <version>${org.exoplatform.platform.version}</version>
      </dependency>
      <dependency>
        <groupId>mysql</groupId>
        <artifactId>mysql-connector-java</artifactId>
        <version>${mysql.connector.java.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <modules>
    <module>cloud-management-patch</module>
    <module>web</module>
    <module>admin-bundle</module>
    <module>platform-bundle</module>
  </modules>
</project>
