<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
   <display-name>cloud-admin</display-name>

   <context-param>
      <param-name>webapp-composer-class</param-name>
      <param-value>com.exoplatform.cloudworkspaces.CloudWorkspacesAdminApplicationComposer</param-value>
   </context-param>

   <filter>
      <filter-name>NoCachingFilter</filter-name>
      <filter-class>com.exoplatform.cloudworkspaces.shell.NoCachingFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>NoCachingFilter</filter-name>
      <url-pattern>/admin-shell/*</url-pattern>
   </filter-mapping>

   <filter>
      <filter-name>TenantStartFilter</filter-name>
      <filter-class>com.exoplatform.cloudworkspaces.WorkspacesTenantStartFilter</filter-class>
      <init-param>
         <param-name>resumingPage</param-name>
         <param-value>http://${tenant.masterhost}/resuming-hide.jsp</param-value>
      </init-param>
      <init-param>
         <param-name>notFoundPage</param-name>
         <param-value>http://${tenant.masterhost}/home.jsp</param-value>
      </init-param>
   </filter>

   
   <filter>
      <filter-name>picoFilter</filter-name>
      <filter-class>org.everrest.pico.servlet.EverrestPicoFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>picoFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>

   <filter-mapping>
      <filter-name>TenantStartFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   

   <listener>
      <listener-class>org.picocontainer.web.PicoServletContainerListener</listener-class>
   </listener>
   

   <servlet>
      <servlet-name>EverrestServlet</servlet-name>
      <servlet-class>org.everrest.core.servlet.EverrestServlet</servlet-class>
   </servlet>



    <servlet-mapping>
      <servlet-name>EverrestServlet</servlet-name>
      <url-pattern>/rest/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>EverrestServlet</servlet-name>
      <url-pattern>/rest/private/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>EverrestServlet</servlet-name>
      <url-pattern>/admin-shell/rest/private/*</url-pattern>
   </servlet-mapping>
   
   <welcome-file-list>
      <welcome-file>/index.html</welcome-file>
   </welcome-file-list>



   <security-constraint>
      <web-resource-collection>
         <web-resource-name>Cloud-admin-application</web-resource-name>
         <url-pattern>/rest/private/*</url-pattern>
         <url-pattern>/admin-shell/rest/private/*</url-pattern>
         <http-method>POST</http-method>
         <http-method>GET</http-method>
      </web-resource-collection>
      <auth-constraint>
         <role-name>cloud-admin</role-name>
         <role-name>cloud-manager</role-name>
      </auth-constraint>
      <user-data-constraint>
         <transport-guarantee>NONE</transport-guarantee>
      </user-data-constraint>
   </security-constraint>


   <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>Cloud admin application</realm-name>
   </login-config>

   <security-role>
      <description>The role that is required to log in to the Cloud admin application</description>
      <role-name>cloud-admin</role-name>
      <role-name>cloud-manager</role-name>
   </security-role>





</web-app>

