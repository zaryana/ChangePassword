<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>User setting for Email Notification service</description>
        <portlet-name>EmailNotificationSettingPortlet</portlet-name>
        <display-name>Email Notification Setting</display-name>

        <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>
        <init-param>
          <name>webui.configuration</name>
          <value>/WEB-INF/conf/portlet/EmailNotificationSettingPortlet/webui/configuration.xml</value>
        </init-param>    
        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.EmailNotificationSettingPortlet.EmailNotificationSettingPortlet</resource-bundle>

        <portlet-info>
            <title>Email Notification Setting</title>
            <short-title>Email Notification Setting</short-title>
            <keywords>Cloud Portlets</keywords>
        </portlet-info>
    </portlet>

    <portlet>
        <description>User feedback</description>
        <portlet-name>FeedbackPortlet</portlet-name>
        <display-name>Feedback</display-name>

        <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>
        <init-param>
          <name>webui.configuration</name>
          <value>/WEB-INF/conf/portlet/FeedbackPortlet/webui/configuration.xml</value>
        </init-param>    
        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.FeedbackPortlet.FeedbackPortlet</resource-bundle>

        <portlet-info>
            <title>Feedback</title>
            <short-title>Feedback</short-title>
            <keywords>Cloudws Portlets</keywords>
        </portlet-info>
    </portlet>

</portlet-app>
