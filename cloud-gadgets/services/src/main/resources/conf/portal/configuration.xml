<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <!-- GETTING STARTED -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.GettingStarted.GettingStartedRestService</type>
  </component>
  <!-- MY DOCUMENTS -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.MyDocumentsGadget.MyDocumentsRestService</type>
  </component>
  <!-- SUGGESTED PEOPLE -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.SuggestPeopleGadget.PeopleRestServices</type>
  </component>
  <!-- SUGGEST SPACES -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.SuggestSpacesGadget.SpaceRestServices</type>
  </component>
  <!-- WHOS ONLINE -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.WhosOnlineGadget.WhosOnlineRestService</type>
  </component>

  <!-- INVITE JOIN WORKSPACE -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.InviteJoinWs.InviteJoinWsRESTService</type>
  </component>
  
  <!-- CALENDAR -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.AgendaGadget.GetEventRESTService</type>
  </component>
  
  <component>
    <key>org.exoplatform.services.mail.MailService</key>
    <type>org.exoplatform.services.mail.impl.MailServiceImpl</type>
    <init-params>
      <properties-param>
        <name>config</name>
        <property name="mail.smtp.auth.username" value="${gatein.email.smtp.username}" />
        <property name="mail.smtp.auth.password" value="${gatein.email.smtp.password}" />
        <property name="mail.smtp.host" value="${gatein.email.smtp.host}" />
        <property name="mail.smtp.port" value="${gatein.email.smtp.port}" />
        <property name="mail.smtp.starttls.enable" value="${gatein.email.smtp.starttls.enable}" />
        <property name="mail.smtp.auth" value="${gatein.email.smtp.auth}" />
        <property name="mail.smtp.debug" value="false" />
        <property name="mail.smtp.socketFactory.port" value="${gatein.email.smtp.socketFactory.port}" />
        <property name="mail.smtp.socketFactory.class" value="${gatein.email.smtp.socketFactory.class}" />
        <property name="mail.smtp.socketFactory.fallback" value="false" />
      </properties-param>
    </init-params>
  </component>
  
  
  <!-- EMAIL NOTIFICATION -->
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.EmailNotification.EmailNotificationService</type>
  </component>
  
  <component>
    <type>com.exoplatform.cloudworkspaces.gadget.services.EmailNotification.EmailNotificationRestService</type>
  </component>
       
</configuration>
